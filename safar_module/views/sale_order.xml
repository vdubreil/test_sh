    <record model="ir.ui.view" id="s_sale_order_search_view">
        <field name="name">Safar.sale.order.search2</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
              <xpath expr="//filter[@name='customer']" position="after">
                    <filter name="s_id_famille_client_related" string="Famille client" domain="[]" context="{'group_by': 's_id_famille_client_related'}"/>
              </xpath>
        </field>
    </record>

    <!--Ajout d'une colonne avec le facturé dans les commandes à facturer-->
    <record model="ir.ui.view" id="s_sale_order_tree_afacturer">
        <field name="name">Safar.sale_order_afacturer</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="s_client_facture_related" string="Client facturé"/>
                <field name="s_jr_facturation_related" string="Jr Facturation"/>
                <field name="s_code_concession_related" string="Cd Concession"/>
            </xpath>
            <xpath expr="//field[@name='activity_exception_decoration']" position="after">
                <field name="global_channel_id" optional="hide"/>
            </xpath>
        </field>
    </record>

</odoo>