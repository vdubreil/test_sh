    <record model="ir.ui.view" id="res_partner_modif_search_view">
        <field name="name">Safar.res.partner.search</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="s_num_client" string="N° client SAFAR"/>
            </xpath>
            <xpath expr="//field[@name='parent_id']" position="after">
                <field name="s_code_concession"/>
                <field name="zip"/>
                <field name="city"/>
                <field name="property_product_pricelist"/>
            </xpath>
            <xpath expr="//filter[@name='group_country']" position="after">
                <filter name="group_origin" string="Origine Client" context="{'group_by': 's_id_partner_origin'}"/>
                <filter name="group_pricelist" string="Liste de prix" context="{'group_by': 'property_product_pricelist'}"/>
            </xpath>
        </field>
    </record>

    <!-- pour afficher le mode MAP dans la vue client depuis CRM/Ventes/Clients-->
    <record id="base.action_partner_form" model="ir.actions.act_window">
        <field name="view_mode">kanban,tree,form,activity,map</field>
    </record>
</odoo>