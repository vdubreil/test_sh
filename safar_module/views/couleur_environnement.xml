    <!--Barre de navigation-->
<!--    <template id="s_custom_color_nav_bar" inherit_id="web.layout">-->
    <record model="ir.ui.view" id="s_custom_color_nav_bar">
        <field name="name">Safar.color_environnement_nav_bar</field>
        <field name="inherit_id" ref="web.layout"/>
        <field name="arch" type="xml">
            <body t-att-class="body_classname" position="inside">
                <t t-if="request.db[:21] != 'barronjj-safar-master'">
                  <style>
                     <!--#CC0000 est la couleur principale : rouge-->
                     <!--#990000 est la couleur de survol : rouge sombre-->
                    .o_main_navbar {background-color: #CC0000;border-bottom: 0px;}
                    .o_main_navbar .show .dropdown-toggle {background-color: #CC0000;}
                    .o_main_navbar > ul > li > a:hover, .o_main_navbar
                                   > ul > li > label:hover {background-color: #990000;}
                    .o_main_navbar > a:hover, .o_main_navbar > a:focus, .o_main_navbar
                                   > button:hover, .o_main_navbar
                                   > button:focus {background-color: #990000;color: inherit;}
                    .o_main_navbar > a:hover, .o_main_navbar > a:focus, .o_main_navbar
                                   > button:hover, .o_main_navbar
                                   > button:focus {background-color: #990000;color: inherit;}
                  </style>
                </t>
            </body>
        </field>
    </record>
